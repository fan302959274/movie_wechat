<!--index.wxml-->
<view class="container">

  <!--search-->
  <view  class="searchview" catchtouchstart="search" style="border:1rpx solid #ccc;">
    <icon type="search" class="searchicon" ></icon>
  </view>
  <!--swiper-->    
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
        <block wx:for="{{movies}}" wx:for-index="index">    
          <swiper-item>    
            <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>    
          </swiper-item>    
        </block>    
  </swiper>
  <!--video-->
  <block wx:for="{{movielist}}" wx:for-index="index">  
    <view class="videoclass">
      <video  poster="{{item.videoPoster}}" objectFit="cover" class="videolist" id="myVideo" 
      src="{{item.videoViewPath}}" ></video>
    <view class="line-css"  >
      <view class="btn-view">
        <view class="btn-node" style="width:40%;">
          <span style="font-size:35rpx;font-family: SimHei;">{{item.videoName}}</span>
        </view>

        <view class="btn-node" style="text-align:right;width:20%;">
          <span class="iconfont icon-share" style="font-size:40rpx;"></span>
        </view>


        <view class="btn-node" style="width:20%;text-align:right;" >
          <span catchtouchstart="likes" data-videoid="{{item.id}}"  data-index="{{index}}" data-likescount="{{item.likesCount}}" data-likesflag="{{item.likesFlag}}" class="{{item.likesFlag ? 'iconfont icon-favoritesfilling':'iconfont icon-favorite'}}"  style="font-size:40rpx;"><text  style="margin-left:20rpx;font-size:20rpx;color:#ccc;">{{item.likesCount}}</text></span>
        </view>

        <view catchtouchstart="comments" data-videoid="{{item.id}}" class="btn-node" style="width:20%;text-align:right;">
          <span  class="iconfont icon-comments" style="font-size:40rpx;"><text  style="margin-left:20rpx;font-size:20rpx;color:#ccc;">{{item.replyCount}}</text></span>
        </view>
      </view>
    </view>


      <view class="content-css" >
      <text>{{item.videoIntroduction}}</text>
      </view>
    </view>
  </block>



  
</view>
