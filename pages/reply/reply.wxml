<!--index.wxml-->
<view class="container" >


<view class="shuru" >
        <input id="replytext" focus="true" style="height:60rpx;border-radius: 10rpx;background-color: #fff;width:80%;margin:20rpx;padding-left:20rpx;" name="replytext" bindinput="bindReplytext" auto-height placeholder="发表评论"/>
        <span  style="width:15%;padding-top:30rpx;" id="{{movieid}}"   bindtap="reply">发送</span>
</view> 


  
<view style="width:100%;">
  <block wx:for="{{replys}}" wx:for-index="index">   
    <view class="reply-node">
      <view>
          <image class="userinfo-avatar" src="{{item.userAvatarUrl}}" background-size="cover"></image>
      </view> 


      <view class="name-content" >
          <text style="font-size:25rpx;color:#ccc;margin:10rpx;">{{item.userNickName}}</text>
          <text style="font-size:15rpx;color:#ccc;margin-left:10rpx;">{{item.replyTimeStr}}</text>
          <text style="font-size:30rpx;margin-left:10rpx;margin-top:20rpx;margin-left:10rpx;">{{item.replyContent}}</text>
      </view>  
    </view>
  </block> 
  
  <view style="height:200rpx;">
           
  </view>  
</view>



</view>

