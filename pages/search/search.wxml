<!--index.wxml-->
<view class="container">
  

  <!--search-->
  <view  class="search-view">
    <icon type="search" class="search-icon" ></icon>
    <input placeholder="搜索" bindconfirm='bindSearchconfirm'  bindinput="bindSearchtext" focus="true" class="search-input"></input>
  </view>


  <block wx:for="{{videos}}" wx:for-index="index">    
  
      <view  class="search-ressult-view" bindtap="search"  data-id="{{item.id}}" >
          <icon type="search" class="search-icon" size="20"></icon>
          <text class="search-result-text">{{item.videoName}}</text>
      </view>

    
  </block>  
  

  <!--history-->
  <view  class="search-history">
    <text>搜索历史</text>
    <icon class="iconfont icon-delete" ></icon>
  </view>
  <!--hot-->
  <view  class="search-historylist">

    <block wx:for="{{historylist}}" wx:for-index="index">
          <span style="border:1rpx solid grey; border-radius: 10rpx;padding:5rpx;">{{item.searchContent}}</span>
          <text style="width:10rpx;"></text>
    </block>

  </view>


  

   <!--hot-->
  <view  class="search-hot">
    <text>热门搜索</text>
    
  </view>
 <!--hot-->
  <view  class="search-hotlist">
    <block wx:for="{{historylist}}" wx:for-index="index">
          <span style="border:1rpx solid grey; border-radius: 10rpx;padding:5rpx;">{{item.searchContent}}</span>
          <text style="width:10rpx;"></text>
    </block>
    
  </view>
  


</view>
